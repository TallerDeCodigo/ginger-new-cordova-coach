	<header class="hwhite2">
		<div class="toolbar">
			<a class="back hook" data-resource="chat-contacts" href="lista-chat.html">
				<img class="full {{cordova_full_path}}" src="{{cordova_full_path}}images/back.svg">
			</a>
			<h2 id="opponent_name" class="titulo">{{data.header_title}}</h2>
		</div>
	</header>

	<ul class="lista_chat" id="dialogs-list">
	</ul>
	
	<footer class="message-bar escribir">
		<form class="form-inline" onsubmit="return chatCore.submit_handler(this)">
			<input type="file" capture="camera" accept="image/*" name="galeria" id="load-img">
			<a href="#" class="attach" onclick="$('#load-img').click();">
				<img src="{{cordova_full_path}}images/attach.svg">
			</a>
			<textarea id="chat-message" rows="1" placeholder="Mensaje"></textarea>
			<input  type="submit" class="btn btn-default send cpur" onclick="return chatCore.clickSendMessage()" value="Enviar">
		</form>
	</footer>